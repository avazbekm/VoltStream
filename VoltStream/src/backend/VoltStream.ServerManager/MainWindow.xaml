<Window x:Class="VoltStream.ServerManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VoltStream Manager"
        Height="600"
        Width="900">
    <Grid>
        <DockPanel>

            <!-- Yuqori panel: server status va navigatsiya -->
            <StackPanel DockPanel.Dock="Top"
                        Orientation="Horizontal"
                        Background="#EEE"
                        Height="40">

                <!-- Backend holati indikator -->
                <Ellipse x:Name="ServerStatusIndicator"
                         Width="20"
                         Height="20"
                         Margin="10"
                         VerticalAlignment="Center"
                         Fill="Gray" />

                <!-- Navigatsiya tugmalari -->
                <Button Content="Dashboard"
                        Margin="5"
                        Width="80"
                        Click="DashboardButton_Click" />
                <Button Content="Settings"
                        Margin="5"
                        Width="80"
                        Click="SettingsButton_Click" />
                <Button Content="IP Access"
                        Margin="5"
                        Width="80"
                        Click="IpAccessButton_Click" />
            </StackPanel>

            <!-- Content frame -->
            <Frame x:Name="MainFrame"
                   NavigationUIVisibility="Hidden" />
        </DockPanel>
    </Grid>
</Window>
