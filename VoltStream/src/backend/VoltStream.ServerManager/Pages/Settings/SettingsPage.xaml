<Page x:Class="VoltStream.ServerManager.Pages.Settings.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="clr-namespace:VoltStream.ServerManager.Pages.Settings"
      xmlns:converters="clr-namespace:VoltStream.ServerManager.Converters"
      mc:Ignorable="d"
      Title="Settings">
    
    <Page.Resources>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
    </Page.Resources>

    <Page.DataContext>
        <vm:SettingsViewModel />
    </Page.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0">
            <!-- Project Tab -->
            <TabItem Header="Project">
                <StackPanel VerticalAlignment="Center"
                            HorizontalAlignment="Center">

                    <!-- Server Port -->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Server Port:"
                                   Width="120"
                                   VerticalAlignment="Center" />
                        <TextBox Text="{Binding Settings.Server.Port, Mode=TwoWay}"
                                 Width="100" />
                    </StackPanel>

                    <!-- Protocol -->
                    <StackPanel Orientation="Horizontal"
                                Margin="0,20">
                        <TextBlock Text="Protocol:"
                                   Width="120"
                                   VerticalAlignment="Center" />
                        <StackPanel Orientation="Horizontal">
                            <RadioButton Content="HTTP"
                                         GroupName="Protocol"
                                         IsChecked="{Binding Settings.Server.UseHttps, Converter={StaticResource InverseBoolConverter}, Mode=TwoWay}" />
                            <RadioButton Content="HTTPS"
                                         GroupName="Protocol"
                                         IsChecked="{Binding Settings.Server.UseHttps, Mode=TwoWay}"
                                         Margin="10,0,0,0" />
                        </StackPanel>
                    </StackPanel>

                </StackPanel>
            </TabItem>

            <!-- Database Tab -->
            <TabItem Header="Database">
                <StackPanel VerticalAlignment="Center"
                            HorizontalAlignment="Center">

                    <!-- Host -->
                    <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                        <TextBlock Text="Host:"
                                   Width="120"
                                   VerticalAlignment="Center" />
                        <TextBox Text="{Binding Settings.ConnectionStrings.DatabaseHost, Mode=TwoWay}"
                                 Width="200" />
                    </StackPanel>

                    <!-- Port -->
                    <StackPanel Orientation="Horizontal"
                                Margin="0,10">
                        <TextBlock Text="Port:"
                                   Width="120"
                                   VerticalAlignment="Center" />
                        <TextBox Text="{Binding Settings.ConnectionStrings.DatabasePort, Mode=TwoWay}"
                                 Width="100" />
                    </StackPanel>

                    <!-- Database Name -->
                    <StackPanel Orientation="Horizontal"
                                Margin="0,10">
                        <TextBlock Text="Database Name:"
                                   Width="120"
                                   VerticalAlignment="Center" />
                        <TextBox Text="{Binding Settings.ConnectionStrings.DatabaseName, Mode=TwoWay}"
                                 Width="200" />
                    </StackPanel>

                    <!-- Username -->
                    <StackPanel Orientation="Horizontal"
                                Margin="0,10">
                        <TextBlock Text="Username:"
                                   Width="120"
                                   VerticalAlignment="Center" />
                        <TextBox Text="{Binding Settings.ConnectionStrings.Username, Mode=TwoWay}"
                                 Width="200" />
                    </StackPanel>

                    <!-- Password -->
                    <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                        <TextBlock Text="Password:"
                                   Width="120"
                                   VerticalAlignment="Center" />
                        <PasswordBox x:Name="PasswordBoxControl"
                                     Width="200"
                                     PasswordChanged="PasswordBox_PasswordChanged" />
                    </StackPanel>

                </StackPanel>
            </TabItem>
        </TabControl>

        <Button Grid.Row="1"
                Content="Save"
                Width="100"
                HorizontalAlignment="Left"
                Margin="0,10,0,0"
                Command="{Binding SaveCommand}" />
    </Grid>
</Page>
