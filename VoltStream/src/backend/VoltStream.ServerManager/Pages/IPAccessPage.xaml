<Page x:Class="VoltStream.ServerManager.Pages.IPAccessPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="IP Access">
    <Grid Margin="10">
        <DataGrid x:Name="IpDataGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="False"
                  RowEditEnding="IpDataGrid_RowEditEnding">
            <DataGrid.Columns>
                <!-- ID ustuni readonly -->
                <DataGridTextColumn Header="ID"
                                    Binding="{Binding Id}"
                                    IsReadOnly="True" />

                <!-- IP ustuni readonly -->
                <DataGridTextColumn Header="IP Address"
                                    Binding="{Binding IpAddress}"
                                    IsReadOnly="True" />

                <!-- Agar boshqa maydonlar editable bo‘lsin -->
                <DataGridTextColumn Header="Client Name"
                                    Binding="{Binding DeviceName}" />

                <DataGridCheckBoxColumn Header="IsActive"
                                        Binding="{Binding IsActive}" />

                <DataGridTextColumn Header="LastRequestAt"
                                        Binding="{Binding LastRequestAt}" 
                                        IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
