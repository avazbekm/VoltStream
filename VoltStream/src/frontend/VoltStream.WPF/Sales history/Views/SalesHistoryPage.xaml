<Page x:Class="VoltStream.WPF.Sales_history.Views.SalesHistoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:controls="clr-namespace:VoltStream.WPF.Commons.UserControls"
      xmlns:utils="clr-namespace:VoltStream.WPF.Commons.Utils"
      xmlns:local="clr-namespace:VoltStream.WPF.Sales_history.Views"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Sotuv tarixi" Background="Azure">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 🔍 Filter panel -->
        <Grid Grid.Row="0" Margin="10,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- 🧾 Filtr bo‘limi -->
            <StackPanel Grid.Column="0" Margin="2 10">

                <!-- 👤 Mijoz -->
                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Mijoz"
                               Width="100"
                               VerticalAlignment="Center"
                               FontSize="13"
                               Foreground="{DynamicResource PrimaryTextColor}"
                               Margin="3,0,0,3"/>
                    <ComboBox x:Name="cbxCustomer"
                              Width="210"
                              ItemsSource="{Binding Customers}"
                              SelectedItem="{Binding SelectedCustomer}"
                              DisplayMemberPath="Name"
                              IsEditable="True"
                              FontSize="14"
                              Margin="0,2"
                              Padding="4,2"
                              BorderThickness="1"
                              BorderBrush="#ccc"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5,0">
                    <!-- 📅 Sana oralig‘i -->
                    <StackPanel Orientation="Horizontal" Margin="0 0 0 0">
                        <TextBlock Text="Davr"
                                   Width="30"
                                   VerticalAlignment="Center"
                                   FontSize="13"
                                   Foreground="{DynamicResource PrimaryTextColor}"
                                   Margin="3,0,0,3"/>
                        <controls:UserCalendar x:Name="beginDate"
                                               SelectedDate="{Binding BeginDate, Mode=TwoWay}"
                                               LostFocus="beginDate_LostFocus"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Left"
                                               Width="110"
                                               FontSize="14"
                                               Margin="0"
                                               utils:EnterKeyTab.IsEnabled="True" />

                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0">
                        <TextBlock Text="dan"
                                   Width="25"
                                   VerticalAlignment="Center"
                                   FontSize="13"
                                   Foreground="{DynamicResource PrimaryTextColor}"
                                   Margin="0,0,0,3"/>
                        <controls:UserCalendar x:Name="endDate"
                                               SelectedDate="{Binding EndDate, Mode=TwoWay}"
                                               LostFocus="endDate_LostFocus"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Left"
                                               Width="110"
                                               FontSize="14"
                                               Margin="0 "
                                               utils:EnterKeyTab.IsEnabled="True" />
                        <TextBlock Text="gacha"
                                   Width="35"
                                   VerticalAlignment="Center"
                                   FontSize="13"
                                   Foreground="{DynamicResource PrimaryTextColor}"
                                   Margin="0,0,0,3"/>

                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="2 15">
                <!-- 🧩 Mahsulot turi -->
                <StackPanel Orientation="Horizontal" Margin="5,0">
                    <TextBlock Text="Mahsulot turi"
                               Width="80"
                               VerticalAlignment="Center"
                               FontSize="13"
                               Foreground="{DynamicResource PrimaryTextColor}"
                               Margin="3,0,0,3"/>
                    <ComboBox x:Name="cbxCategory"
                              Width="150"
                              ItemsSource="{Binding Categories}"
                              SelectedItem="{Binding SelectedCategory}"
                              DisplayMemberPath="Name"
                              IsEditable="True"
                              FontSize="14"
                              Margin="0 2 0 4"
                              Padding="4,2"
                              BorderThickness="1"
                              BorderBrush="#ccc"/>
                </StackPanel>

                <!-- 🏷 Mahsulot nomi -->
                <StackPanel Orientation="Horizontal" Margin="5,0">
                    <TextBlock Text="Nomi"
                               FontSize="14"
                               MinWidth="80"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource PrimaryTextColor}"
                               Margin="3,0,0,3"/>
                    <ComboBox x:Name="cbxProductName"
                              Width="150"
                              ItemsSource="{Binding Products}"
                              SelectedItem="{Binding SelectedProduct}"
                              DisplayMemberPath="Name"
                              IsEditable="True"
                              FontSize="14"
                              Margin="0,2"
                              Padding="4,2"
                              BorderThickness="1"
                              BorderBrush="#ccc"/>
                </StackPanel>
            </StackPanel>

            <!-- 🔘 Tugmalar -->
            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                <Button Content="📄 Ko‘rish"
                        Command="{Binding PreviewCommand}"
                        Margin="5"
                        Padding="10,3"
                        FontSize="13"
                        ToolTip="Chop etishdan oldin ma'lumotlarni ko‘rish (Print Preview)" />

                <Button Content="🧹 Tozalash"
                        Command="{Binding ClearFilterCommand}"
                        Margin="5,2,5,5"
                        Padding="10,3"
                        Style="{DynamicResource ActionButton}"
                        FontSize="13"
                        ToolTip="Filterni tozalash yoki barcha ma'lumotlarni qayta ko‘rsatish" />
            </StackPanel>

            <StackPanel Grid.Column="3" VerticalAlignment="Center">
                <Button Content="🖨 Pechat"
                        Command="{Binding PrintCommand}"
                        Margin="5"
                        Padding="10,3"
                        FontSize="13"
                        Style="{DynamicResource actionButton}"
                        ToolTip="Chiqarish (Printerga yuborish)"/>

                <Button Content="📊 Excel"
                        Command="{Binding ExportToExcelCommand}"
                        Margin="5,2,5,5"
                        Padding="10,3"
                        FontSize="13"
                        ToolTip="Excel faylga eksport qilish"/>
            </StackPanel>
        </Grid>

        <!-- 📋 DataGrid -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding FilteredSaleItems}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  RowHeaderWidth="0"
                  SelectionMode="Single"
                  FontSize="14"
                  Margin="10,25,10,-5"
                  AlternatingRowBackground="#F5F5F5">

            <DataGrid.Columns>
                <!-- 🕓 Sana -->
                <DataGridTextColumn Header="Sana"
                                    Binding="{Binding OperationDate, StringFormat={}{0:dd.MM.yyyy}}"
                                    Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="5,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Mijoz"
                                    Binding="{Binding Customer}"
                                    Width="1.5*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Left"/>
                            <Setter Property="Padding" Value="5,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Mahsulot turi -->
                <DataGridTextColumn Header="Mahsulot turi"
                                    Binding="{Binding Category}"
                                    Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Left"/>
                            <Setter Property="Padding" Value="5 0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="utils:NumericTextBox.IsNumeric" Value="True"/>
                            <Setter Property="TextAlignment" Value="Right"/>
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Nomi"
                                    Binding="{Binding Name}"
                                    Width="1.7*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Left"/>
                            <Setter Property="Padding" Value="5 0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="utils:NumericTextBox.IsNumeric" Value="True"/>
                            <Setter Property="TextAlignment" Value="Right"/>
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Rulon uzunligi"
                                    Binding="{Binding RollLength, StringFormat={}{0:N0}}"
                                    Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right"/>
                            <Setter Property="Padding" Value="5 0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="utils:NumericTextBox.IsNumeric" Value="True"/>
                            <Setter Property="TextAlignment" Value="Right"/>
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Rulon soni"
                                    Binding="{Binding Quantity, StringFormat={}{0:N0}}"
                                    Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right"/>
                            <Setter Property="Padding" Value="5 0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="utils:NumericTextBox.IsNumeric" Value="True"/>
                            <Setter Property="TextAlignment" Value="Right"/>
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Jami"
                                    Binding="{Binding TotalCount, StringFormat={}{0:N0}}"
                                    Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right"/>
                            <Setter Property="Padding" Value="5 0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="utils:NumericTextBox.IsNumeric" Value="True"/>
                            <Setter Property="TextAlignment" Value="Right"/>
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="O‘lchov birligi"
                                    Binding="{Binding Unit}"
                                    Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="5 0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="utils:NumericTextBox.IsNumeric" Value="True"/>
                            <Setter Property="TextAlignment" Value="Right"/>
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Narxi"
                                    Binding="{Binding Price, StringFormat={}{0:N2}}"
                                    Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right"/>
                            <Setter Property="Padding" Value="5 0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="utils:NumericTextBox.IsNumeric" Value="True"/>
                            <Setter Property="TextAlignment" Value="Right"/>
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Umumiy summa"
                                    Binding="{Binding TotalAmount, StringFormat={}{0:N2}}"
                                    Width="1.5*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right"/>
                            <Setter Property="Padding" Value="5 0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="utils:NumericTextBox.IsNumeric" Value="True"/>
                            <Setter Property="TextAlignment" Value="Right"/>
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
