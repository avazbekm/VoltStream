<UserControl x:Class="VoltStream.WPF.Commons.UserControls.UserCalendar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VoltStream.WPF.Commons.UserControls"
             mc:Ignorable="d" 
             >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="30" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <TextBox x:Name="dateTextBox"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
                     HorizontalContentAlignment="Right" Margin="0"/>
        </Grid>
        <Grid Grid.Column="1">
            <Button Content="📅"  VerticalAlignment="Stretch" HorizontalAlignment="Left" Margin="1,0,0,0" 
            Click="OpenCalendar_Click" IsTabStop="False"/>
        </Grid>
        <Popup x:Name="calendarPopup" PlacementTarget="{Binding ElementName=dateTextBox}" StaysOpen="False">
            <Border BorderBrush="Aqua" BorderThickness="1">
                <Calendar x:Name="calendar" SelectedDatesChanged="Calendar_SelectedDatesChanged"/>
            </Border>
        </Popup>
    </Grid>
</UserControl>
