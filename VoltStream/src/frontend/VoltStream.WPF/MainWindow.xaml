<Window
    x:Class="VoltStream.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1300"
    Height="700"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="SidebarColumn"
                                  Width="250" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Notification stack  -->
            <StackPanel
                x:Name="NotificationHost"
                Grid.Column="1"
                Margin="20"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Panel.ZIndex="9999"
                IsHitTestVisible="False"
                Orientation="Vertical" />

            <!--  Navigation menu  -->
            <StackPanel Grid.Column="0" Background="#0A003A">
                <StackPanel
                    Height="35"
                    Margin="15,5,0,15"
                    Orientation="Horizontal">
                    <Image Source="/Commons/Source/Images/LogoVolt.png" />
                    <TextBlock
                        Margin="20,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="20"
                        FontWeight="Medium"
                        Foreground="White"
                        Text="VoltStream" />
                </StackPanel>

                <RadioButton Style="{DynamicResource menuButton}" Tag="{DynamicResource color1}">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="Home" Style="{StaticResource menuButtonIcon}" />
                        <TextBlock Style="{StaticResource menuButtonText}" Text="Bosh sahifa" />
                    </StackPanel>
                </RadioButton>

                <RadioButton
                    Command="{Binding ShowSuppliesViewCommand}"
                    Style="{DynamicResource menuButton}"
                    Tag="{DynamicResource color2}">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="ProjectDiagram" Style="{StaticResource menuButtonIcon}" />
                        <TextBlock Style="{StaticResource menuButtonText}" Text="Ishlab chiqarish" />
                    </StackPanel>
                </RadioButton>

                <RadioButton
                    Command="{Binding ShowSalesViewCommand}"
                    Style="{DynamicResource menuButton}"
                    Tag="{DynamicResource color3}">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="ShoppingCart" Style="{StaticResource menuButtonIcon}" />
                        <TextBlock Style="{StaticResource menuButtonText}" Text="Savdo" />
                    </StackPanel>
                </RadioButton>

                <RadioButton
                    Command="{Binding ShowPaymentViewCommand}"
                    Style="{DynamicResource menuButton}"
                    Tag="{DynamicResource color6}">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="MoneyCheckDollar" Style="{StaticResource menuButtonIcon}" />
                        <TextBlock Style="{StaticResource menuButtonText}" Text="Oldi-berdi" />
                    </StackPanel>
                </RadioButton>

                <RadioButton
                    Command="{Binding ShowProductViewCommand}"
                    Style="{DynamicResource menuButton}"
                    Tag="{DynamicResource color8}">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="Boxes" Style="{StaticResource menuButtonIcon}" />
                        <TextBlock Style="{StaticResource menuButtonText}" Text="Mahsulotlar qoldig'i" />
                    </StackPanel>
                </RadioButton>

                <RadioButton
                    Command="{Binding ShowSalesHistoryViewCommand}"
                    Style="{DynamicResource menuButton}"
                    Tag="{DynamicResource color7}">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="FileAlt" Style="{StaticResource menuButtonIcon}" />
                        <TextBlock Style="{StaticResource menuButtonText}" Text="Sotuv tarixi" />
                    </StackPanel>
                </RadioButton>

                <RadioButton Style="{DynamicResource menuButton}"
                             Tag="{DynamicResource color9}"
                             Command="{Binding ShowSettingsCommand}"
                             GroupName="MenuGroup">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Left">
                        <fa:IconImage Icon="Sliders"
                                      Style="{StaticResource menuButtonIcon}" />
                        <TextBlock Text="Sozlamalar"
                                   Style="{StaticResource menuButtonText}" />
                    </StackPanel>
                </RadioButton>
            </StackPanel>

            <!--  Header and content  -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#0A003A">
                    <TextBlock
                        Margin="20,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Foreground="White"
                        Text="Bosh sahifa" />
                </Border>

                <Frame
                    Grid.Row="1"
                    Margin="10"
                    Content="{Binding CurrentChildView}"
                    NavigationUIVisibility="Hidden" />
            </Grid>
        </Grid>
    </Border>
</Window>
