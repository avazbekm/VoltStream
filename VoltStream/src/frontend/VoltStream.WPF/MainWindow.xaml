<Window
    x:Class="VoltStream.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:VoltStream.WPF"
    Title="Volt Stream"
    Width="1300"
    Height="700"
    Loaded="MainWindow_Loaded"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="SidebarColumn" Width="250" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel
                x:Name="NotificationHost"
                Grid.Column="1"
                Margin="20"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Panel.ZIndex="9999"
                IsHitTestVisible="False"
                Orientation="Vertical" />

            <!--  Sidebar  -->
            <StackPanel
                x:Name="Sidebar"
                Grid.Column="0"
                Background="#0A003A">

                <!--  Logo ToggleButton  -->
                <ToggleButton IsChecked="{Binding IsSidebarCollapsed}" Style="{DynamicResource menuToggleButton}">
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                        <Image
                            Width="30"
                            Height="30"
                            Source="/Commons/Source/Images/LogoVolt.png" />
                        <TextBlock
                            Margin="15,0"
                            FontSize="20"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="Volt Stream" />
                    </StackPanel>
                </ToggleButton>

                <!--  Menyu  -->
                <RadioButton
                    GroupName="MenuGroup"
                    Style="{DynamicResource menuButton}"
                    Tag="{DynamicResource color1}">
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                        <fa:IconImage Icon="Home" Style="{StaticResource menuButtonIcon}" />
                        <TextBlock Style="{StaticResource menuButtonText}" Text="Bosh sahifa" />
                    </StackPanel>
                </RadioButton>

                <RadioButton
                    Command="{Binding ShowSuppliesViewCommand}"
                    GroupName="MenuGroup"
                    Style="{DynamicResource menuButton}"
                    Tag="{DynamicResource color2}">
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                        <fa:IconImage Icon="ProjectDiagram" Style="{StaticResource menuButtonIcon}" />
                        <TextBlock Style="{StaticResource menuButtonText}" Text="Ishlab chiqarish" />
                    </StackPanel>
                </RadioButton>

                <RadioButton
                    Command="{Binding ShowSalesViewCommand}"
                    GroupName="MenuGroup"
                    Style="{DynamicResource menuButton}"
                    Tag="{DynamicResource color3}">
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                        <fa:IconImage Icon="ShoppingCart" Style="{StaticResource menuButtonIcon}" />
                        <TextBlock Style="{StaticResource menuButtonText}" Text="Savdo" />
                    </StackPanel>
                </RadioButton>


                <RadioButton
                    Command="{Binding ShowPaymentViewCommand}"
                    GroupName="MenuGroup"
                    Style="{DynamicResource menuButton}"
                    Tag="{DynamicResource color6}">
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                        <fa:IconImage Icon="MoneyCheckDollar" Style="{StaticResource menuButtonIcon}" />
                        <TextBlock Style="{StaticResource menuButtonText}" Text="Oldi-berdi" />
                    </StackPanel>
                </RadioButton>

                <RadioButton
                    Command="{Binding ShowProductViewCommand}"
                    GroupName="MenuGroup"
                    Style="{DynamicResource menuButton}"
                    Tag="{DynamicResource color8}">
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                        <fa:IconImage Icon="Boxes" Style="{StaticResource menuButtonIcon}" />
                        <TextBlock Style="{StaticResource menuButtonText}" Text="Mahsulotlar qoldig'i" />
                    </StackPanel>
                </RadioButton>

                <RadioButton
                    Command="{Binding ShowSalesHistoryViewCommand}"
                    GroupName="MenuGroup"
                    Style="{DynamicResource menuButton}"
                    Tag="{DynamicResource color7}">
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                        <fa:IconImage Icon="FileAlt" Style="{StaticResource menuButtonIcon}" />
                        <TextBlock Style="{StaticResource menuButtonText}" Text="Sotuv tarixi" />
                    </StackPanel>
                </RadioButton>

                <RadioButton
                    Command="{Binding ShowSettingsCommand}"
                    GroupName="MenuGroup"
                    Style="{DynamicResource menuButton}"
                    Tag="{DynamicResource color9}">
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                        <fa:IconImage Icon="Sliders" Style="{StaticResource menuButtonIcon}" />
                        <TextBlock Style="{StaticResource menuButtonText}" Text="Sozlamalar" />
                    </StackPanel>
                </RadioButton>
            </StackPanel>

            <!--  Header va content  -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#0A003A">
                    <TextBlock
                        Margin="20,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Foreground="White"
                        Text="{Binding CurrentPageTitle}"
                        Visibility="{Binding IsSidebarCollapsed, Converter={StaticResource BooleanToVisibilityConverter}}" />
                </Border>

                <Frame
                    Grid.Row="1"
                    Margin="10"
                    Content="{Binding CurrentChildView}"
                    NavigationUIVisibility="Hidden" />
            </Grid>
        </Grid>
    </Border>
</Window>
