<Window x:Class="VoltStream.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VoltStream.WPF"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:viewmodels="clr-namespace:VoltStream.WPF"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow"
        Height="700"
        Width="1300">
    <Window.DataContext>
        <viewmodels:MainViewModel />
    </Window.DataContext>
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/VoltStream.WPF;component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/VoltStream.WPF;component/Styles/Colors.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Notification stack -->
            <StackPanel Grid.Column="1"
                        x:Name="NotificationHost"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Right"
                        Margin="20"
                        Panel.ZIndex="9999"
                        Orientation="Vertical"
                        IsHitTestVisible="False" />
            
            <!--Navigation menu-->
            <StackPanel Grid.Column="0"
                        Background="#0A003A">
                <StackPanel Orientation="Horizontal"
                            Height="35"
                            Margin="15,5,0,15">
                    <Image Source="/VoltStream.WPF;component/Source/Images/LogoVolt.png" />
                    <TextBlock Text="VoltStream"
                               FontWeight="Medium"
                               VerticalAlignment="Center"
                               FontSize="20"
                               Foreground="White"
                               Margin="20,0,0,0" />

                </StackPanel>
                <RadioButton Style="{DynamicResource menuButton}"
                             Tag="{DynamicResource color1}">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="Home"
                                      Style="{StaticResource menuButtonIcon}" />
                        <TextBlock Text="Bosh sahifa"
                                   Style="{StaticResource menuButtonText}" />
                    </StackPanel>
                </RadioButton>
                <RadioButton Style="{DynamicResource menuButton}"
                             Tag="{DynamicResource color2}"
                             Command="{Binding ShowSuppliesViewCommand}">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="ProjectDiagram"
                                      Style="{StaticResource menuButtonIcon}" />
                        <TextBlock Text="Ishlab chiqarish"
                                   Style="{StaticResource menuButtonText}" />
                    </StackPanel>
                </RadioButton>
                <RadioButton Style="{DynamicResource menuButton}"
                             Tag="{DynamicResource color3}"
                             Command="{Binding ShowSalesViewCommand}">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="ShoppingCart"
                                      Style="{StaticResource menuButtonIcon}" />
                        <TextBlock Text="Savdo"
                                   Style="{StaticResource menuButtonText}" />
                    </StackPanel>
                </RadioButton>
            </StackPanel>
            <!--Header and content-->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <!--Header-->
                <Border Grid.Row="0"
                        Background="#0A003A">
                    <TextBlock Text="Bosh sahifa"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Foreground="White"
                               Margin="20,0,0,0" />
                </Border>
                <!--Content-->
                <Frame Grid.Row="1"
                       Content="{Binding CurrentChildView}"
                       Margin="10"
                       NavigationUIVisibility="Hidden">

                </Frame>
            </Grid>
        </Grid>
    </Border>
</Window>
