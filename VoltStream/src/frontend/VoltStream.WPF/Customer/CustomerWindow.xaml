<Window x:Class="VoltStream.WPF.Customer.CustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VoltStream.WPF.Customer"
        xmlns:utils="clr-namespace:VoltStream.WPF.Commons.Utils"
        mc:Ignorable="d"
        Title="Yangi Xaridor" Height="250" Width="400">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibility"/>
        <utils:InvertibleBooleanToVisibility x:Key="BoolToEnabled" Invert="True"/>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- Имя -->
        <TextBlock Text="Ismi:" Grid.Row="0" Grid.Column="0" 
                   VerticalAlignment="Center" Margin="0,5"/>
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtName" Margin="0,5" FontSize="14" utils:TextBoxTabBehavior.EnableTabOnKeys="True"/>
        
        <!-- Телефон -->
        <TextBlock Text="Telefon raqami:" Grid.Row="1" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,5"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtPhone" Margin="0,5" FontSize="14" utils:TextBoxTabBehavior.EnableTabOnKeys="True"/>

        <!-- Адрес -->
        <TextBlock Text="Manzili:" Grid.Row="2" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,5"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtAddress" Margin="0,5" FontSize="14" utils:TextBoxTabBehavior.EnableTabOnKeys="True"/>


        <!-- Начальная сумма -->
        <TextBlock Text="Boshlang'ch Balans:" Grid.Row="3" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,5"/>
        <Grid Grid.Column="1" Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="qazdorlik" Panel.ZIndex="1" Foreground="IndianRed" Margin="15,5" IsHitTestVisible="False"
                       Visibility="{Binding ElementName=txtBeginningSum,Path=Text.IsEmpty, Converter={StaticResource BooleanToVisibility}}"/>
            
            <TextBox Grid.Column="0" x:Name="txtBeginningSum" Margin="0,5,3,5" FontSize="14" Foreground="Red"
                     Visibility="{Binding ElementName=txtBeginningSum2, Path=Text.IsEmpty,Converter={StaticResource BooleanToVisibility}}"
                     utils:NumericTextBox.IsNumeric="True" utils:TextBoxTabBehavior.EnableTabOnKeys="True"/>
            
            <TextBlock Grid.Column="1" Text="xaqdorlik" Panel.ZIndex="1" Foreground="#888" Margin="15,5" IsHitTestVisible="False"
                       Visibility="{Binding ElementName=txtBeginningSum2,Path=Text.IsEmpty, Converter={StaticResource BooleanToVisibility}}"/>

            <TextBox Grid.Column="1" x:Name="txtBeginningSum2" Margin="3,5,0,5" FontSize="14" 
                     Visibility="{Binding ElementName=txtBeginningSum, Path=Text.IsEmpty,Converter={StaticResource BooleanToVisibility}}"
                     utils:NumericTextBox.IsNumeric="True" utils:TextBoxTabBehavior.EnableTabOnKeys="True"/>
        </Grid>
        <!-- Описание -->
        <TextBlock Text="Qo`shimcha ma`lumot:" Grid.Row="4" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,5"/>
        <TextBox Grid.Row="4" Grid.Column="1" x:Name="txtDescription" Margin="0,5" FontSize="14" utils:TextBoxTabBehavior.EnableTabOnKeys="True"/>

        <!-- Скидка -->
        <!--<TextBlock Text="Boshlang'ch xaqqi:" Grid.Row="5" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,5"/>
        <TextBox Grid.Row="5" Grid.Column="1" x:Name="txtDiscountSum" Margin="0,5"/>-->

        <!-- Кнопки -->
        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,5,0,0">
            <Button Content="Saqlash" Width="100" Margin="5" Click="Save_Click"/>
            <Button Content="Bekor qilish" Width="100" Margin="5" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
