<Window
    x:Class="VoltStream.WPF.Customer.CustomerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:VoltStream.WPF.Commons.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VoltStream.WPF.Customer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:utils="clr-namespace:VoltStream.WPF.Commons.Utils"
    Title="Yangi Xaridor"
    Width="400"
    Height="250"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <!--  Имя  -->
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="0,5"
            VerticalAlignment="Center"
            Text="Ismi:" />
        <TextBox
            x:Name="txtName"
            Grid.Row="0"
            Grid.Column="1"
            Margin="0,5"
            utils:TextBoxTabBehavior.EnableTabOnKeys="True"
            FontSize="14" />

        <!--  Телефон  -->
        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,5"
            VerticalAlignment="Center"
            Text="Telefon raqami:" />
        <TextBox
            x:Name="txtPhone"
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,5"
            utils:TextBoxTabBehavior.EnableTabOnKeys="True"
            FontSize="14" />

        <!--  Адрес  -->
        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Margin="0,5"
            VerticalAlignment="Center"
            Text="Manzili:" />
        <TextBox
            x:Name="txtAddress"
            Grid.Row="2"
            Grid.Column="1"
            Margin="0,5"
            utils:TextBoxTabBehavior.EnableTabOnKeys="True"
            FontSize="14" />


        <!--  Начальная сумма  -->
        <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            Margin="0,5"
            VerticalAlignment="Center"
            Text="Boshlang'ch Balans:" />
        <Grid Grid.Row="3" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                Margin="15,5"
                Panel.ZIndex="1"
                Foreground="IndianRed"
                IsHitTestVisible="False"
                Text="qazdorlik"
                Visibility="{Binding ElementName=txtBeginningSum, Path=Text.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />

            <TextBox
                x:Name="txtBeginningSum"
                Grid.Column="0"
                Margin="0,5,3,5"
                utils:NumericTextBox.IsNumeric="True"
                utils:TextBoxTabBehavior.EnableTabOnKeys="True"
                FontSize="14"
                Foreground="Red"
                Visibility="{Binding ElementName=txtBeginningSum2, Path=Text.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />

            <TextBlock
                Grid.Column="1"
                Margin="15,5"
                Panel.ZIndex="1"
                Foreground="#888"
                IsHitTestVisible="False"
                Text="xaqdorlik"
                Visibility="{Binding ElementName=txtBeginningSum2, Path=Text.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />

            <TextBox
                x:Name="txtBeginningSum2"
                Grid.Column="1"
                Margin="3,5,0,5"
                utils:NumericTextBox.IsNumeric="True"
                utils:TextBoxTabBehavior.EnableTabOnKeys="True"
                FontSize="14"
                Visibility="{Binding ElementName=txtBeginningSum, Path=Text.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />
        </Grid>
        <!--  Описание  -->
        <TextBlock
            Grid.Row="4"
            Grid.Column="0"
            Margin="0,5"
            VerticalAlignment="Center"
            Text="Qo`shimcha ma`lumot:" />
        <TextBox
            x:Name="txtDescription"
            Grid.Row="4"
            Grid.Column="1"
            Margin="0,5"
            utils:TextBoxTabBehavior.EnableTabOnKeys="True"
            FontSize="14" />

        <!--  Кнопки  -->
        <StackPanel
            Grid.Row="6"
            Grid.ColumnSpan="2"
            Margin="0,5,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="100"
                Margin="5"
                Click="Save_Click"
                Content="Saqlash" />
            <Button
                Width="100"
                Margin="5"
                Content="Bekor qilish"
                IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>
