<Page x:Class="VoltStream.WPF.Supplies.Views.SuppliesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VoltStream.WPF.Supplies.Views"
      xmlns:controls="clr-namespace:VoltStream.WPF.Commons.UserControls"
      xmlns:utils="clr-namespace:VoltStream.WPF.Commons.Utils"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SupplyPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*" MaxWidth="600"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>
                <Grid  Grid.Row="0" Grid.Column="0">
                    <StackPanel Orientation="Horizontal" Margin="10,0">
                        <Label Content="Sana:" VerticalAlignment="Center"  FontSize="14"/>
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="0" Grid.Column="1">
                    <controls:UserCalendar x:Name="supplyDate" 
                              VerticalAlignment="Center" 
                              HorizontalAlignment="Left"
                              Width="150" FontSize="14"
                              Margin="0,0,10,0"
                              utils:EnterKeyTab.IsEnabled="True"/>
                </Grid>
                <Grid Grid.Row="1" Grid.Column="0">
                    <StackPanel Orientation="Horizontal" Margin="10,0">
                        <Label Content="Maxsulot:" VerticalAlignment="Center" FontSize="14"/>
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="1" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox Grid.Column="0" x:Name="txtProduct" 
                              IsEditable="True" 
                              VerticalAlignment="Center" 
                              HorizontalAlignment="Stretch"  
                              FontSize="14"
                              utils:EnterKeyTab.IsEnabled="True"/>
                    <Label Grid.Column="1" Content="Nomi:" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="14" Margin="0,0,5,0"/>
                    <ComboBox Grid.Column="2" x:Name="texCategory"
                              IsEditable="True"
                             VerticalAlignment="Center" 
                             HorizontalAlignment="Stretch" 
                             FontSize="14" Margin="0,0,10,0"
                             utils:EnterKeyTab.IsEnabled="True"/>
                </Grid>
                <Grid Grid.Row="2" Grid.Column="0">
                    <Label Content="Rulon metr:" VerticalAlignment="Center" Margin="10,0" FontSize="14"/>
                </Grid>
                <Grid Grid.Row="2" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="85"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" x:Name="perRollCount" 
                             VerticalAlignment="Center" 
                             HorizontalAlignment="Stretch" 
                             HorizontalContentAlignment="Right" 
                             FontSize="14" Margin="0,0,10,0"
                             utils:EnterKeyTab.IsEnabled="True"/>
                    <Label Grid.Column="1" Content="Rulon soni:" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="14" Margin="0,0,5,0"/>
                    <TextBox Grid.Column="2" x:Name="rollCount" 
                             VerticalAlignment="Center" 
                             HorizontalAlignment="Stretch" 
                             HorizontalContentAlignment="Right" 
                             FontSize="14" Margin="0,0,10,0"
                             utils:EnterKeyTab.IsEnabled="True"/>
                </Grid>
                <Grid Grid.Row="3" Grid.Column="0">
                    <Label Content="Jami metr:" VerticalAlignment="Center" Margin="10,0" FontSize="14"/>
                </Grid>
                <Grid Grid.Row="3" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="85"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" x:Name="totalMeters" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Stretch" 
                        HorizontalContentAlignment="Right" 
                        FontSize="14" Margin="0,0,10,0" 
                        utils:EnterKeyTab.IsEnabled="True"
                        IsReadOnly="True"/>
                    <Label Grid.Column="1" Content="Narxi m.:" VerticalAlignment="Center" Margin="10,0" FontSize="14"/>

                    <TextBox Grid.Column="2" x:Name="txtPrice" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Stretch" 
                        HorizontalContentAlignment="Right" 
                        FontSize="14" Margin="0,0,10,0" 
                        utils:EnterKeyTab.IsEnabled="True"/>
                    
                </Grid>

                <Grid Grid.Row="4" Grid.Column="1">
                    <Button x:Name="addSupplyBtn" Content="Qo'shish" Width="150" Height="25" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14"/>
                </Grid>
            </Grid>
            <Grid Grid.Column="2">
                <Border BorderBrush="Gray" BorderThickness="1" Margin="10">
                    <Label Content="Maxsulot xaqida ma'lumotlar" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" FontWeight="Bold"/>
                </Border>
            </Grid>
        </Grid>
        <DataGrid Grid.Row="1" x:Name="supplyDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Sana" Binding="{Binding SupplyDate, StringFormat=d}" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Maxsulot" Binding="{Binding ProductName}" Width="2*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Rulon soni" Binding="{Binding RollCount}" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Rulon metr" Binding="{Binding PerRollCount}" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Jami metr" Binding="{Binding TotalMeters}" Width="*" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
