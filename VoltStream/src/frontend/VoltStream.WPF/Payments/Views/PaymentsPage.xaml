<Page x:Class="VoltStream.WPF.Payments.Views.PaymentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VoltStream.WPF.Payments.Views"
      xmlns:controls="clr-namespace:VoltStream.WPF.Commons.UserControls"
      xmlns:utils="clr-namespace:VoltStream.WPF.Commons.Utils"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PaymentsPage">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Content="Sana:" VerticalAlignment="Center" FontSize="14" Margin="5,0,0,0"/>
                <Label Grid.Row="1" Grid.Column="0" Content="Mijoz:" VerticalAlignment="Center" FontSize="14" Margin="5,0,0,0"/>
                <Label Grid.Row="2" Grid.Column="0" Content="Val. turi:" VerticalAlignment="Center" FontSize="14" Margin="5,0,0,0"/>
                <Grid Grid.Row="0" Grid.Column="1">
                    <controls:UserCalendar x:Name="supplyDate" SelectedDate="{Binding OperationDate}" VerticalAlignment="Center" HorizontalAlignment="Left" Width="150" FontSize="14"
                        Margin="5,0,30,0" utils:EnterKeyTab.IsEnabled="True"/>
                </Grid>
                <Grid Grid.Row="1" Grid.Column="1">
                    <ComboBox x:Name="CustomerName" IsEditable="True" Text="{Binding CustomerName}" VerticalAlignment="Center" HorizontalAlignment="Stretch" 
                              FontSize="14" Margin="5,1" utils:ComboBoxTabBehavior.EnableTabOnSelect="True"/>
                </Grid>
                <Grid Grid.Row="2" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="70"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name="CurrencyType" IsEditable="True" Text="{Binding CustomerName}" VerticalAlignment="Center" HorizontalAlignment="Stretch" 
                              FontSize="14" Margin="5,1,5,1" utils:ComboBoxTabBehavior.EnableTabOnSelect="True"/>
                    <TextBlock Grid.Column="1" Text="kurs /(%)" VerticalAlignment="Center" FontSize="14" Margin="20,2,5,2"/>
                    <TextBox x:Name="Kurs" Grid.Column="2" Margin="5,2" utils:NumericTextBox.IsNumeric="True" utils:TextBoxTabBehavior.EnableTabOnKeys="True"/>
                </Grid>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Grid.Row="0" Content="Summa:" VerticalAlignment="Center" FontSize="14" Foreground="#888" Margin="5,0,0,0"
                           FontStyle="Italic"/>
                    <Label Grid.Column="0" Grid.Row="1" Content="Kirim:" VerticalAlignment="Center" FontSize="14" Margin="5,0,0,0"/>
                    <Label Grid.Column="0" Grid.Row="2" Content="Chiqim:" VerticalAlignment="Center" FontSize="14" Margin="5,0,0,0"/>
                    <TextBox Grid.Column="1" Grid.Row="0" x:Name="Summa" FontSize="14" Margin="5,2" FontStyle="Italic" Background="Transparent" 
                             utils:NumericTextBox.IsNumeric="True"/>
                    <TextBox Grid.Column="1" Grid.Row="1" x:Name="Kirim" FontSize="14" Margin="5,2" utils:NumericTextBox.IsNumeric="True" utils:TextBoxTabBehavior.EnableTabOnKeys="True"/>
                    <TextBox Grid.Column="1" Grid.Row="2" x:Name="Chiqim" FontSize="14" Margin="5,2" utils:NumericTextBox.IsNumeric="True" utils:TextBoxTabBehavior.EnableTabOnKeys="True"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
