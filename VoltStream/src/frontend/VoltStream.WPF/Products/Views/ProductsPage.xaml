<Page x:Class="VoltStream.WPF.Products.Views.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:utils="clr-namespace:VoltStream.WPF.Commons.Utils"
      xmlns:local="clr-namespace:VoltStream.WPF.Products.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductsPage">

    <Grid>
        <!-- Grid struktura: 2 ta qator -->
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- 🔍 Filter panel -->
            <Grid Grid.Row="0"  Margin="10,5">
                <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

                <!-- 🧩 Mahsulot turi -->
                <StackPanel Grid.Column="0" Margin="10" >
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Mahsulot turi"
                                   Width="100"
                                   VerticalAlignment="Center"
                                   FontSize="13"
                                   Foreground="{DynamicResource PrimaryTextColor}"
                                   Margin="3,0,0,3"/>
                    <ComboBox x:Name="cbxCategory"
                              Width="200"
                              ItemsSource="{Binding Categories}"
                              SelectedItem="{Binding SelectedCategory}"
                              DisplayMemberPath="Name"
                              IsEditable="True"
                              FontSize="14"
                              Margin="0,2"
                              GotFocus="cbxCategory_GotFocus"
                              Padding="4,2"
                              BorderThickness="1"
                              BorderBrush="#ccc"/>
                </StackPanel>

                    <!-- 🏷 Mahsulot nomi -->
                    <StackPanel  Orientation="Horizontal" Margin="5,0">
                        <TextBlock Text="Nomi"
                                   FontSize="14"
                                   MinWidth="100"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource PrimaryTextColor}"
                                   Margin="3,0,0,3"/>
                    <ComboBox x:Name="cbxProductName"
                                  Width="200"
                                  ItemsSource="{Binding Products}"
                                  SelectedItem="{Binding SelectedProduct}"
                                  DisplayMemberPath="Name"
                                  IsEditable="True"
                                  FontSize="14"
                                  Margin="0,2"
                                  Padding="4,2"
                                  GotFocus="cbxProductName_GotFocus"
                                  BorderThickness="1"
                                  BorderBrush="#ccc"/>
                    </StackPanel>
                </StackPanel>
            <StackPanel Grid.Column="1"
            VerticalAlignment="Center">

                <!-- 👁️‍🗨️ Ma'lumotlarni oldindan ko‘rish (Print Preview) -->
                <Button Content="📄 Ko‘rish"
            Command="{Binding PreviewCommand}"
            Margin="5"
            Padding="10,3"
            VerticalAlignment="Center"
            FontSize="13"
            ToolTip="Chop etishdan oldin ma'lumotlarni ko‘rish (Print Preview)" />

                <!-- 🔄 Filterni tozalash -->
                <Button Content="🧹 Tozalash"
            Command="{Binding ClearFilterCommand}"
            Margin="5,2,5,5"
            Padding="10,3"
            VerticalAlignment="Center"
            FontSize="13"
            ToolTip="Filterni tozalash yoki barcha ma'lumotlarni qayta ko‘rsatish" />
            </StackPanel>
            <StackPanel Grid.Column="2" VerticalAlignment="Center">

                <Button Content="🖨 Pechat"
                            Command="{Binding PrintCommand}"
                            Margin="5"
                            Padding="10,3"
                            VerticalAlignment="Center"
                            FontSize="13"
                            ToolTip="Chiqarish (Printerga yuborish)"/>

                <!-- 📊 Excel -->
                <Button Content="📊 Excel"
                            Command="{Binding ExportToExcelCommand}"
                            Margin="5,2,5,5"
                            Padding="10,3"
                            VerticalAlignment="Center"
                            FontSize="13"
                            ToolTip="Excel faylga eksport qilish"/>
            </StackPanel>

            <!-- 🖨 Pechat -->
                <StackPanel Grid.Column="2" VerticalAlignment="Center">

                    <Button Content="🖨 Pechat"
                            Command="{Binding PrintCommand}"
                            Margin="5"
                            Padding="10,3"
                            VerticalAlignment="Center"
                            FontSize="13"
                            ToolTip="Chiqarish (Printerga yuborish)"/>

                    <!-- 📊 Excel -->
                    <Button Content="📊 Excel"
                            Command="{Binding ExportToExcelCommand}"
                            Margin="5,2,5,5"
                            Padding="10,3"
                            VerticalAlignment="Center"
                            FontSize="13"
                            ToolTip="Excel faylga eksport qilish"/>
                </StackPanel>
                <!-- ✅ Checkbox: hamma qoldiqlarni ko‘rsatish -->
                <CheckBox Grid.Column="4"
                          Content="Hamma qoldiqlarni ko‘rsatish"
                          IsChecked="{Binding ShowAllBalances, Mode=TwoWay}"
                          Margin="10,25,0,15"
                          VerticalAlignment="Bottom"
                          FontSize="13"/>
            </Grid>


        <!-- 2-qatordagi DataGrid -->
        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding ProductItems}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  RowHeaderWidth="0"
                  SelectionMode="Single"
                  FontSize="14"
                  Margin="10"
                  AlternatingRowBackground="#F5F5F5">

            <!-- Ustunlar -->
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mahsulot turi"
        Binding="{Binding Category}"
        Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Left"/>
                            <Setter Property="Padding" Value="5,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Nomi"
        Binding="{Binding Name}"
        Width="2*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Left"/>
                            <Setter Property="Padding" Value="5,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Rulon uzunligi"
        Binding="{Binding RollLength, StringFormat={}{0:N0}}"
        Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right"/>
                            <Setter Property="Padding" Value="5 0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="utils:NumericTextBox.IsNumeric" Value="True"/>
                            <Setter Property="TextAlignment" Value="Right"/>
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Rulon soni"
        Binding="{Binding Quantity, StringFormat={}{0:N0}}"
        Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right"/>
                            <Setter Property="Padding" Value="5 0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="utils:NumericTextBox.IsNumeric" Value="True"/>
                            <Setter Property="TextAlignment" Value="Right"/>
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Jami"
        Binding="{Binding TotalCount, StringFormat={}{0:N0}}"
        Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right"/>
                            <Setter Property="Padding" Value="5 0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="utils:NumericTextBox.IsNumeric" Value="True"/>
                            <Setter Property="TextAlignment" Value="Right"/>
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="O‘lchov birligi"
        Binding="{Binding Unit}"
        Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="5,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Narxi"
        Binding="{Binding Price, StringFormat={}{0:N2}}"
        Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right"/>
                            <Setter Property="Padding" Value="5 0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="utils:NumericTextBox.IsNumeric" Value="True"/>
                            <Setter Property="TextAlignment" Value="Right"/>
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Umumiy summa"
        Binding="{Binding TotalAmount, StringFormat={}{0:N2}}"
        Width="1.5*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right"/>
                            <Setter Property="Padding" Value="5 0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="utils:NumericTextBox.IsNumeric" Value="True"/>
                            <Setter Property="TextAlignment" Value="Right"/>
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
